<h1>Listing states</h1>

<table align="center">
  <tr>
    <th>Name</th>
  </tr>

<% @states.each do |state| %>
  <tr>
    <td><%=h state.name %></td>
    <td><%= link_to image_tag('edit.png'), edit_state_path(state) %></td>
    <td><%= link_to image_tag('delete.png'), state, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New state', new_state_path %>

