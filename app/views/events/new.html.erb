<br />
  <div class="button"><%= link_to 'All',events_path %></div>
<div align="center">
<div class="white_bordered_div">
            <h3>Events</h3>

            <table align="center">
            <%= form_for @event, :html => { :multipart => true }  do |f| %>
              <%= f.error_messages %>

             <tr>
                <td>Title</td>
                <td><%= f.text_field :title %></td>
              </tr>
              <tr>
                <td>Description</td>
                <td><%= f.text_field :description %></td>
              </tr>
              <tr>
                <td>Event Date</td>
                <td><%= f.date_select(:event_date, {:order => [:month, :day,:year],:start_year=>1988}) %></td>
               </tr>
               <tr>
                <td><%= f.label :tags %></td>
                <td>
                      <%= f.autocomplete_field :tags, autocomplete_event_tags_events_path %>
                </td>
              </tr>
              <%= f.fields_for :event_uploads do |photo_form| %>
              <tr>
                <td>Image</td>
                <td><%= photo_form.file_field :photo %></td>
              </tr>
              <% end %>
              <tr>
                <td colspan="2" align="center">
                  <%= f.hidden_field :user_id,:value=>current_user.id %>
                  <%= f.submit 'Create',:class=>'button_new' %>&nbsp;&nbsp;
                </td>
              </tr>
            <% end %>
            </table>
    </div>  

</div>

