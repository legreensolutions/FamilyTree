<br />

<div align="center">
<h3>Events</h3>

<table align="center">
<% form_for @event, :html => { :multipart => true }  do |f| %>
  <%= f.error_messages %>

 <tr>
    <td>Title</td>
    <td><%= f.text_field :title %></td>
  </tr>
  <tr>
    <td>Description</td>
    <td><%= f.text_field :description %></td>
  </tr>
  <tr>
    <td>Event Date</td>
    <td><%= f.date_select(:event_date, :order => [:month, :day,:year]) %></td>
   </tr>
  <% f.fields_for :event_uploads do |photo_form| %>
  <tr>
    <td>Image</td>
    <td><%= photo_form.file_field :photo %></td>
  </tr>
  <% end %>
  <tr>
    <td colspan="2" align="center">
    <%= f.hidden_field :user_id,:value=>current_user.id %>
    <%= f.submit 'Create' %>
    </td>
  </tr>
<% end %>
</table>

<%= link_to 'Back', events_path %>
</div>

