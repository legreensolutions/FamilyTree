<h1>Alerts</h1>
<table align="center">

  <tr>
  <th>Title</th><th>Description</th><th>Date</th><th>Image</th><th></th><th></th><th></th>
  </tr>

<% @alerts.each do |alert| %>
  <tr>
    <td><%= alert.title %></td>
    <td><%= alert.description %></td>
    <td><%= alert.alert_date %></td>
    <% @upload = alert.alert_uploads.first %>
    <td><%unless @upload.nil? %>
          <%= image_tag @upload.photo.url(:thumb) %>
         <% else %>
         'No Image'
         <% end %>
    </td>
    <td><%= link_to 'Show', alert %></td>
    <td><%= link_to 'Edit', edit_alert_path(alert) %></td>
    <td><%= link_to 'Destroy', alert, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

