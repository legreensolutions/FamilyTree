<br /><div class="page_container">
<h3>New alert</h3>
<table align="center">
<% form_for @alert ,:html=>{:multipart=>true} do |f| %>
  <%= f.error_messages %>
<tr>
    <td>Title</td>
    <td><%= f.text_field :title %></td>
  </tr>
  <tr>
    <td>Description</td>
    <td><%= f.text_field :description %></td>
  </tr>
   <tr>
    <td>Date</td>
    <td><%= f.date_select(:alert_date, :order => [:month, :day,:year]) %></td>
   </tr>
  <% f.fields_for :alert_uploads do |photo_form| %>
  <tr>
    <td>Image1</td>
    <td><%= photo_form.file_field :photo %></td>
  </tr>
  <% end %>
  <tr>
    <td colspan="2"><%= f.submit 'Create' %></td>
  </tr>
<% end %>
</table>
</div>
<%= link_to 'Back', alerts_path %>

