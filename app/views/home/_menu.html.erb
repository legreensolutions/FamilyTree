<%uri=request.request_uri -%>
 <%= link_to (image_tag "/images/menu/mnu_home" + (uri=="/" ? '.png' : '0.png'), :mouseover => "/images/menu/mnu_home.png"),root_url -%>
 <%= link_to (image_tag "/images/menu/mnu_family_tree" + (uri=="/families_tree" ? '.png' : '0.png'), :mouseover => "/images/menu/mnu_family_tree.png"),family_tree_path -%>
 <%= link_to (image_tag "/images/menu/mnu_events" + (uri=="/events" ? '.png' : '0.png'), :mouseover => "/images/menu/mnu_events.png"),events_path -%>


           <%- unless Gallery.find(:first,:conditions=>['public=?',true]).nil? -%>
              <%= link_to (image_tag "/images/menu/mnu_gallery" + (uri=="/galleries" ? '.png' : '0.png'), :mouseover => "/images/menu/mnu_gallery.png"),Gallery.find(:first,:conditions=>['public=?',true]).photo.url(:original) -%>
              <%= render :partial=>'galleries/list_of_images',:locals => {:id => Gallery.find(:first,:conditions=>['public=?',true]).id } -%>
          <% else -%>
              <%= link_to (image_tag "/images/menu/mnu_gallery" + (uri=="/galleries" ? '.png' : '0.png'), :mouseover => "/images/menu/mnu_gallery.png"),galleries_path -%>
          <%- end -%> <!-- GALLERY MENU  -->



<% if current_user -%>
  <%= link_to (image_tag "/images/menu/mnu_members" + (uri=="/members" ? '.png' : '0.png'), :mouseover => "/images/menu/mnu_members.png"),members_path -%>
  <% if current_user.member -%>
        <%= link_to (image_tag "/images/menu/mnu_profile" + (uri=="/profile" ? '.png' : '0.png'), :mouseover => "/images/menu/mnu_profile.png"),edit_member_path(current_user.member.id) -%>
    <% else -%>
        <%= link_to (image_tag "/images/menu/mnu_profile" + (uri=="/profile" ? '.png' : '0.png'), :mouseover => "/images/menu/mnu_profile.png"),edit_user_path(current_user)-%>
  <% end -%>
  <%= link_to (image_tag "/images/menu/mnu_logout" + (uri=="/logout" ? '.png' : '0.png'), :mouseover => "/images/menu/mnu_logout.png"),logout_path -%>
  <% else -%>
  <%= link_to (image_tag "/images/menu/mnu_login" + (uri=="/login" ? '.png' : '0.png'), :mouseover => "/images/menu/mnu_login.png"),login_path -%>
<% end -%>
<!-- END OF LOGGED IN USERS -->

