<h3 align="center">Gallery </h3>
<div align="center">

<div align="left">Tags : <%= tag_list(Gallery.all) %></div>

<div align="right" style="float:right;"><%= link_to '(Add new image)', new_gallery_path if current_user %></div>


<div id="gallery">

<table align="center">

<tr>
<% @galleries.each do |gallery| %>
<% unless gallery.photo_file_name.nil? %>
  <td>
    <%= link_to image_tag(gallery.photo.url(:thumb)),gallery.photo.url(:medium),:title=>gallery.title   %></td>

<% end %>
<% end %>
</tr>
</table>
</div>
</div>
<br />

