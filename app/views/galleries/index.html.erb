<%if current_user%>
<div class="button"><%= link_to 'Add New', new_gallery_path if current_user %></div>
<% end %>
<% unless @galleries.blank? %>
<div align="left" style="float:left;">
List : <%= tag_list(Gallery.all) %><br />
  <% if current_user %>
                   <% if current_user.is_admin %>
                 <%=  link_to 'Edit/Delete', :controller => 'galleries', :action => 'gallery_all'%>
                <% end %>
                 <% end %>
</div><br />
<h3 align="center">Gallery</h3>

<div id="gallery">


<div style="width:80%;float:right;" >


         <% @galleries.each do |gallery| %>
            <div style="float:left;float:left; padding:15px;" align="center">
            <div>

               <%= link_to image_tag(gallery.photo.url(:thumb)),gallery.photo.url(:large),:title=>gallery.title%>
               <br />

                   <br />


             </div>
            </div>
        <% end %>


    <br /><br />
    <div style="clear:both;"></div>

        <br /><br />

</div>
</div>
<% else %>
<div align="center">
No Records Found
</div>
<% end %>
