<%if current_user%>
<div class="button"><%= link_to 'Add New', new_gallery_path if current_user %></div>
<% end %>


<% if current_user %>
  <% if current_user.is_admin? %>
    <div class="button"><%=  link_to 'Edit/Delete', :controller => 'galleries', :action => 'gallery_all'%></div>
  <% end %>
<% end %>



<% unless @galleries.blank? %>
<div align="left" style="float:left;", class = "tag-category">
Category : <%=raw tag_list(Gallery.all) %> <%= link_to "All Categories", galleries_path %>
</div><br />
<h3 align="center">Gallery</h3>

<div id="gallery">


<div style="width:80%;float:right;" >


         <% @galleries.each do |gallery| %>
            <div style="float:left;float:left; padding:15px;" align="center">

               <div class="photo_frame"><%=gallery.title%><br />


                    <a href= <%= gallery.photo.url(:large) %> data-lightbox="roadtrip" > <%= image_tag(gallery.photo.url(:thumb)) %>   </a>
                    

              </div>




            </div>

        <% end %>

      
    <br /><br />
    <div style="clear:both;"></div>

        <br /><br />



</div>
</div>
<% else %>
<div align="center">
No Records Found
</div>
<% end %>
<br />

