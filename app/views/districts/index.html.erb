<h1>Listing districts</h1>

<table align="center">
  <tr>
    <th>Name</th>
  </tr>

<% @districts.each do |district| %>
  <tr>
    <td><%=h district.name %></td>
    <td><%= link_to image_tag('edit.png'), edit_district_path(district) %></td>
    <td><%= link_to image_tag('delete.png'), district, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New district', new_district_path %>

