<% @news = NewsItem.find(:all,:conditions=>['obsolete =?',false],:order=>'news_date desc',:limit=>5)%>
<h2 class="box"><%= link_to "&nbsp;"*45, news_items_path %></h2>

<table align="center">

<% @news.each do |news| %>
  <tr>
    <td><%= link_to news.title,news_item_path(news) %></td>

  </tr>
<% end %>
</table>

