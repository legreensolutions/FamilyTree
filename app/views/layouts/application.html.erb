   </div>

<div style="clear:both;"></div>


<div id="content_body">

<% flash.each do |key,value| %>
             <div  id="flash" class="flash_<%= key %>" >
                <p style="color: green"><%= value %></p>
                <br><br>
             </div><!-- end  flash   -->
         <% end -%>

         <%= yield :layout %>
</div>

<div style="clear:both;"></div>

<div id="footer"></div>

</div>
</body>


</html>

