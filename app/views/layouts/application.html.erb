<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
 <% title = 'Family Tree: ' + controller.controller_name.capitalize + ': ' + controller.action_name.capitalize + (yield :title).to_s %>
<title><%= title %></title>

<%= stylesheet_link_tag 'scaffold' %>
<%= stylesheet_link_tag 'family' %>
<%= javascript_include_tag :defaults %>


</head>
<body>

<div id="container">

  <div id = "left_top"></div>
  <div id = "right_top">mannekattil.com</div>

  <div id = "left_top1"></div>
  <div id = "right_top1"></div>
  <div style="clear:both;"></div>


   <div id="menu">
      <%= link_to (image_tag "/images/menu/mnu_home_.png"),root_url %>
      <%= link_to (image_tag "/images/menu/mnu_families.png") ,families_path %>
