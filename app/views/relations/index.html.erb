<!-- PARENTS -->

  <div style="width:100%;text-align:center;margin:auto;">
    <div style="text-align:center;margin:auto;height:85px;width:300px;">
        <div class="father">
        <% if @related_member = @member.find_relation(FATHER) %>
          <%= link_to @related_member.name,:controller=>'relations',:action=>'index',:id=>@related_member.id %>
        <% else %>
        <% form_tag "relations/add_relation" ,:method=>'get'  do  %>
          <%= hidden_field_tag 'user_id',@member.id %>
          <%= hidden_field_tag 'relation_id',FATHER %>
          <%= hidden_field_tag 'relation_name',"Father" %>
          <%= submit_tag 'Father' %>

        <% end %>
        <% end %>
        </div>
        <div class="connect">&nbsp;</div>
         <div class="mother">
        <% if @related_member = @member.find_relation(MOTHER) %>

          <%= link_to @related_member.name,:controller=>'relations',:action=>'index',:id=>@related_member.id %>
           <% else %>
        <% form_tag "relations/add_relation" ,:method=>'post'  do %>
          <%= hidden_field_tag 'user_id',@member.id %>
          <%= hidden_field_tag 'relation_id',MOTHER %>
          <%= hidden_field_tag 'relation_name',"Mother" %>
          <%= submit_tag 'Mother' %>

        <% end %>
        <% end %>

        </div>
        <div class="space">&nbsp;</div>
    </div>
  </div>
<div style="clear:both;"></div>
