<h1>Listing posts</h1>

<table>
  <tr>
    <th>Name</th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%=h post.name %></td>
    <td><%= link_to image_tag('edit.png'), edit_post_path(post) %></td>
    <td><%= link_to image_tag('delete.png'), post, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New post', new_post_path %>

